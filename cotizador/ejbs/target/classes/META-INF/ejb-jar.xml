    <session>
      <ejb-name>CotizadorBean</ejb-name>
      <home>ar.com.p3.cotizador.model.CotizadorHome</home>
      <remote>ar.com.p3.cotizador.model.CotizadorObject</remote>
      <ejb-class>ar.com.p3.cotizador.model.CotizadorBean</ejb-class>
      <session-type>Stateless</session-type>
